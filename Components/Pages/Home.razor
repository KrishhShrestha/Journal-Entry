@page "/"
@using Journal_Entry.Models
@inject Journal_Entry.Services.DatabaseService DB
@inject NavigationManager Nav

<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-purple-600 to-purple-900 rounded-3xl p-8 md:p-12 mb-12 relative overflow-hidden">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full"></div>

        <div class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">Your Personal Journal</h1>
                <p class="text-lg text-white/90">
                    Capture your thoughts, track your moods, and reflect on your journey
                </p>
            </div>
            <button class="bg-white text-purple-600 px-8 py-4 rounded-xl font-semibold text-lg shadow-lg hover:-translate-y-0.5 transition-all"
                    @onclick="GoToTodayJournal">
                ✍ Start Writing
            </button>
        </div>
    </div>

    <!-- Recent Journals -->
    <h3 class="text-2xl font-bold text-gray-800 mb-8 border-l-4 border-purple-600 pl-4">
        Recent Entries
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @if (RecentEntries.Any())
        {
            foreach (var entry in RecentEntries)
            {
                <div class="bg-white rounded-2xl shadow hover:shadow-xl transition-all flex flex-col">
                    <div class="p-6 flex-1 flex flex-col">
                        <h5 class="text-xl font-semibold mb-3">@entry.Title</h5>

                        <!--  Rich Text Preview -->
                        <div class="text-gray-600 mb-6 flex-1 preview-content">
                            @((MarkupString)entry.Content)
                        </div>

                        <div class="flex justify-between items-center mb-4">
                            <span class="bg-purple-600 text-white px-4 py-1 rounded-full text-sm">
                                @entry.PrimaryMood
                            </span>
                            <span class="text-gray-400 text-sm">
                                @entry.EntryDate.ToShortDateString()
                            </span>
                        </div>

                        <button class="w-full bg-purple-700 text-white py-3 rounded-xl hover:scale-105 transition"
                                @onclick="() => ViewMoreEntry(entry.Id)">
                            View Entry →
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-span-full text-center py-16">
                <h5 class="text-gray-600">No journal entries yet</h5>
            </div>
        }
    </div>

    @if (RecentEntries.Any())
    {
        <div class="mt-12 text-center">
            <button class="border-2 border-purple-600 text-purple-600 px-8 py-3 rounded-xl hover:bg-purple-600 hover:text-white transition"
                    @onclick="ViewAllJournals">
                View All Journals →
            </button>
        </div>
    }
</div>

<style>
    /* Limit preview height safely for HTML */
    .preview-content {
        max-height: 5.5rem;
        overflow: hidden;
    }

        .preview-content p {
            margin-bottom: 0.5rem;
        }
</style>

@code {
    List<JournalEntry> RecentEntries = new();

    protected override void OnInitialized()
    {
        RecentEntries = DB.GetAllEntries()
                          .OrderByDescending(e => e.EntryDate)
                          .Take(3)
                          .ToList();
    }

    void GoToTodayJournal() => Nav.NavigateTo("/journal");
    void ViewAllJournals() => Nav.NavigateTo("/journals");
    void ViewMoreEntry(int id) => Nav.NavigateTo($"/journal/{id}");
}
