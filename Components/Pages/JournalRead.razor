@page "/journal/{Id:int}"
@using Journal_Entry.Models;

@inject Journal_Entry.Services.DatabaseService DB
@inject NavigationManager Nav

@if (Entry == null)
{
    <p class="text-danger">Journal not found.</p>
}
else
{
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4>@Entry.Title</h4>
            </div>
            <div class="card-body">
                <p><strong>Date:</strong> @Entry.EntryDate.ToShortDateString()</p>
                <p><strong>Mood:</strong> @Entry.PrimaryMood</p>
                <p><strong>Tags:</strong> @Entry.Tags</p>
                <hr />
                <p>@Entry.Content</p>
            </div>
            <div class="card-footer">
                <button class="btn btn-secondary" @onclick="GoBack">Back</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private JournalEntry? Entry;

    protected override void OnInitialized()
    {
        Entry = DB.GetAllEntries()
                  .FirstOrDefault(e => e.Id == Id);
    }

    private void GoBack()
    {
        Nav.NavigateTo("/journals");
    }
}

