@page "/journals"
@using Journal_Entry.Models
@using Journal_Entry.Services
@inject DatabaseService DB
@inject PdfService PdfService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>All Journal Entries</h3>
        <button class="btn btn-success" @onclick="DownloadAllEntries">
            <i class="bi bi-download"></i> Download All as PDF
        </button>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Mood</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Entries)
            {
                <tr>
                    <td>@entry.EntryDate.ToShortDateString()</td>
                    <td>@entry.Title</td>
                    <td>@entry.PrimaryMood</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1"
                                @onclick="() => OpenEntry(entry.Id)">
                            View
                        </button>
                        <button class="btn btn-sm btn-info me-1"
                                @onclick="() => DownloadSingleEntry(entry.Id)">
                            Download
                        </button>
                        <button class="btn btn-sm btn-danger"
                                @onclick="() => DeleteEntry(entry.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    List<JournalEntry> Entries = new();

    protected override void OnInitialized()
    {
        Entries = DB.GetAllEntries();
    }

    void OpenEntry(int id)
    {
        Nav.NavigateTo($"/journal/{id}");
    }

    void DeleteEntry(int id)
    {
        DB.DeleteEntry(id);
        Entries = DB.GetAllEntries();
    }

    async Task DownloadSingleEntry(int id)
    {
        var entry = DB.GetEntry(id);
        if (entry == null) return;

        var pdfBytes = PdfService.GenerateSingleEntryPdf(entry);
        var fileName = $"{entry.Title.Replace(" ", "_")}_{entry.EntryDate:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }

    async Task DownloadAllEntries()
    {
        var pdfBytes = PdfService.GenerateAllEntriesPdf(Entries);
        var fileName = $"All_Journal_Entries_{DateTime.Now:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }
}