@page "/journals"
@using Journal_Entry.Models
@using Journal_Entry.Services
@inject DatabaseService DB
@inject PdfService PdfService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>All Journal Entries</h3>
        <button class="btn btn-success" @onclick="DownloadAllEntries">
            <i class="bi bi-download"></i> Download All as PDF
        </button>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Mood</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in PaginatedEntries)
            {
                <tr>
                    <td>@entry.EntryDate.ToShortDateString()</td>
                    <td>@entry.Title</td>
                    <td>@entry.PrimaryMood</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1"
                                @onclick="() => OpenEntry(entry.Id)">
                            View
                        </button>
                        <button class="btn btn-sm btn-info me-1"
                                @onclick="() => DownloadSingleEntry(entry.Id)">
                            PDF
                        </button>
                        <button class="btn btn-sm btn-danger"
                                @onclick="() => DeleteEntry(entry.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <span>Showing @StartIndex to @EndIndex of @TotalEntries entries</span>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="FirstPage" disabled="@(CurrentPage == 1)">
                        First
                    </button>
                </li>
                <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="PreviousPage" disabled="@(CurrentPage == 1)">
                        Previous
                    </button>
                </li>

                @for (int i = StartPage; i <= EndPage; i++)
                {
                    var pageNumber = i;
                    <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                        <button class="page-link" @onclick="() => GoToPage(pageNumber)">
                            @pageNumber
                        </button>
                    </li>
                }

                <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="NextPage" disabled="@(CurrentPage == TotalPages)">
                        Next
                    </button>
                </li>
                <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="LastPage" disabled="@(CurrentPage == TotalPages)">
                        Last
                    </button>
                </li>
            </ul>
        </nav>
        <div>
            <select class="form-select form-select-sm" style="width: auto;" @onchange="ChangePageSize">
                <option value="5" selected="@(PageSize == 5)">5 per page</option>
                <option value="10" selected="@(PageSize == 10)">10 per page</option>
                <option value="20" selected="@(PageSize == 20)">20 per page</option>
                <option value="50" selected="@(PageSize == 50)">50 per page</option>
            </select>
        </div>
    </div>
</div>

@code {
    List<JournalEntry> Entries = new();

    // Pagination properties
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 10;
    private int TotalPages => (int)Math.Ceiling((double)TotalEntries / PageSize);
    private int TotalEntries => Entries.Count;
    private int StartIndex => (CurrentPage - 1) * PageSize + 1;
    private int EndIndex => Math.Min(CurrentPage * PageSize, TotalEntries);

    // Calculate visible page numbers
    private int StartPage => Math.Max(1, CurrentPage - 2);
    private int EndPage => Math.Min(TotalPages, CurrentPage + 2);

    // Get paginated entries
    private IEnumerable<JournalEntry> PaginatedEntries =>
        Entries.Skip((CurrentPage - 1) * PageSize).Take(PageSize);

    protected override void OnInitialized()
    {
        Entries = DB.GetAllEntries();
    }

    void OpenEntry(int id)
    {
        Nav.NavigateTo($"/journal/{id}");
    }

    void DeleteEntry(int id)
    {
        DB.DeleteEntry(id);
        Entries = DB.GetAllEntries();

        // Adjust current page if needed after deletion
        if (PaginatedEntries.Count() == 0 && CurrentPage > 1)
        {
            CurrentPage--;
        }
    }

    async Task DownloadSingleEntry(int id)
    {
        var entry = DB.GetEntry(id);
        if (entry == null) return;

        var pdfBytes = PdfService.GenerateSingleEntryPdf(entry);
        var fileName = $"{entry.Title.Replace(" ", "_")}_{entry.EntryDate:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }

    async Task DownloadAllEntries()
    {
        var pdfBytes = PdfService.GenerateAllEntriesPdf(Entries);
        var fileName = $"All_Journal_Entries_{DateTime.Now:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }

    // Pagination methods
    void FirstPage()
    {
        CurrentPage = 1;
    }

    void LastPage()
    {
        CurrentPage = TotalPages;
    }

    void NextPage()
    {
        if (CurrentPage < TotalPages)
            CurrentPage++;
    }

    void PreviousPage()
    {
        if (CurrentPage > 1)
            CurrentPage--;
    }

    void GoToPage(int pageNumber)
    {
        CurrentPage = pageNumber;
    }

    void ChangePageSize(ChangeEventArgs e)
    {
        PageSize = int.Parse(e.Value?.ToString() ?? "10");
        CurrentPage = 1; // Reset to first page when changing page size
    }
}