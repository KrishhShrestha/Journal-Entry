@page "/journals"
@using Journal_Entry.Models
@using Journal_Entry.Services
@inject DatabaseService DB
@inject PdfService PdfService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>All Journal Entries</h3>
        <button class="btn btn-success" @onclick="DownloadAllEntries">
            <i class="bi bi-download"></i> Download All as PDF
        </button>
    </div>

    <!-- Search Bar -->
    <div class="card mb-4" style="border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text" style="border-radius: 10px 0 0 10px; background-color: var(--bg-secondary); border-color: var(--border-color);">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Search by title, content, mood, or tags..."
                               style="border-radius: 0 10px 10px 0; border-color: var(--border-color);"
                               @bind="SearchQuery"
                               @bind:event="oninput"
                               @onkeyup="PerformSearch" />
                    </div>
                </div>
                <div class="col-md-2">
                    @if (!string.IsNullOrWhiteSpace(SearchQuery))
                    {
                        <button class="btn btn-outline-secondary w-100"
                                style="border-radius: 10px;"
                                @onclick="ClearSearch">
                            <i class="bi bi-x-circle"></i> Clear
                        </button>
                    }
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(SearchQuery))
            {
                <div class="mt-2">
                    <small class="text-muted">
                        Found <strong>@FilteredEntries.Count</strong> result(s) for "<strong>@SearchQuery</strong>"
                    </small>
                </div>
            }
        </div>
    </div>

    <!-- Table -->
    <div class="card" style="border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
        <div class="card-body p-0">
            <table class="table table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Mood</th>
                        <th>Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PaginatedEntries.Any())
                    {
                        @foreach (var entry in PaginatedEntries)
                        {
                            <tr>
                                <td>@entry.EntryDate.ToShortDateString()</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(SearchQuery) && entry.Title.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase))
                                    {
                                        @HighlightText(entry.Title, SearchQuery)
                                    }
                                    else
                                    {
                                        @entry.Title
                                    }
                                </td>
                                <td>
                                    <span class="badge" style="background-color: #673AB7; color: white; padding: 0.4rem 0.8rem; border-radius: 8px;">
                                        @entry.PrimaryMood
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(entry.Tags))
                                    {
                                        @foreach (var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(3))
                                        {
                                            <span class="badge me-1" style="background-color: var(--bg-secondary); color: var(--text-primary); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem;">
                                                @tag.Trim()
                                            </span>
                                        }
                                        @if (entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Length > 3)
                                        {
                                            <span class="badge" style="background-color: var(--bg-secondary); color: var(--text-muted); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem;">
                                                +@(entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Length - 3)
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No tags</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary me-1"
                                            @onclick="() => OpenEntry(entry.Id)">
                                        <i class="bi bi-eye"></i> View
                                    </button>
                                    <button class="btn btn-sm btn-info me-1"
                                            @onclick="() => DownloadSingleEntry(entry.Id)">
                                        <i class="bi bi-file-pdf"></i> PDF
                                    </button>
                                    <button class="btn btn-sm btn-danger"
                                            @onclick="() => DeleteEntry(entry.Id)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                @if (!string.IsNullOrWhiteSpace(SearchQuery))
                                {
                                    <div class="text-muted">
                                        <i class="bi bi-search" style="font-size: 2rem;"></i>
                                        <p class="mt-2 mb-0">No entries found matching "<strong>@SearchQuery</strong>"</p>
                                        <button class="btn btn-sm btn-link" @onclick="ClearSearch">Clear search</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted">
                                        <i class="bi bi-journal-x" style="font-size: 2rem;"></i>
                                        <p class="mt-2 mb-0">No journal entries yet</p>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination Controls -->
    @if (FilteredEntries.Any())
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                <span>Showing @StartIndex to @EndIndex of @TotalEntries entries</span>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="FirstPage" disabled="@(CurrentPage == 1)">
                            First
                        </button>
                    </li>
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="PreviousPage" disabled="@(CurrentPage == 1)">
                            Previous
                        </button>
                    </li>

                    @for (int i = StartPage; i <= EndPage; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }

                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="NextPage" disabled="@(CurrentPage == TotalPages)">
                            Next
                        </button>
                    </li>
                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="LastPage" disabled="@(CurrentPage == TotalPages)">
                            Last
                        </button>
                    </li>
                </ul>
            </nav>
            <div>
                <select class="form-select form-select-sm" style="width: auto;" @onchange="ChangePageSize">
                    <option value="5" selected="@(PageSize == 5)">5 per page</option>
                    <option value="10" selected="@(PageSize == 10)">10 per page</option>
                    <option value="20" selected="@(PageSize == 20)">20 per page</option>
                    <option value="50" selected="@(PageSize == 50)">50 per page</option>
                </select>
            </div>
        </div>
    }
</div>

<style>
    .highlight {
        background-color: #fbbf24;
        color: #78350f;
        padding: 2px 4px;
        border-radius: 3px;
        font-weight: 600;
    }
</style>

@code {
    List<JournalEntry> Entries = new();
    string SearchQuery = "";

    // Filtered entries based on search
    List<JournalEntry> FilteredEntries => string.IsNullOrWhiteSpace(SearchQuery)
        ? Entries
        : Entries.Where(e =>
            e.Title.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) ||
            e.Content.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) ||
            (!string.IsNullOrWhiteSpace(e.PrimaryMood) && e.PrimaryMood.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase)) ||
            (!string.IsNullOrWhiteSpace(e.Tags) && e.Tags.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase))
        ).ToList();

    // Pagination properties
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 10;
    private int TotalPages => (int)Math.Ceiling((double)TotalEntries / PageSize);
    private int TotalEntries => FilteredEntries.Count;
    private int StartIndex => TotalEntries == 0 ? 0 : (CurrentPage - 1) * PageSize + 1;
    private int EndIndex => Math.Min(CurrentPage * PageSize, TotalEntries);

    // Calculate visible page numbers
    private int StartPage => Math.Max(1, CurrentPage - 2);
    private int EndPage => Math.Min(TotalPages, CurrentPage + 2);

    // Get paginated entries from filtered results
    private IEnumerable<JournalEntry> PaginatedEntries =>
        FilteredEntries.Skip((CurrentPage - 1) * PageSize).Take(PageSize);

    protected override void OnInitialized()
    {
        Entries = DB.GetAllEntries().OrderByDescending(e => e.EntryDate).ToList();
    }

    void PerformSearch()
    {
        CurrentPage = 1; // Reset to first page when searching
        StateHasChanged();
    }

    void ClearSearch()
    {
        SearchQuery = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    // Highlight matched text in search results
    MarkupString HighlightText(string text, string searchTerm)
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return new MarkupString(text);

        var startIndex = text.IndexOf(searchTerm, StringComparison.OrdinalIgnoreCase);
        if (startIndex == -1)
            return new MarkupString(text);

        var before = text.Substring(0, startIndex);
        var match = text.Substring(startIndex, searchTerm.Length);
        var after = text.Substring(startIndex + searchTerm.Length);

        return new MarkupString($"{before}<span class='highlight'>{match}</span>{after}");
    }

    void OpenEntry(int id)
    {
        Nav.NavigateTo($"/journal/{id}");
    }

    void DeleteEntry(int id)
    {
        DB.DeleteEntry(id);
        Entries = DB.GetAllEntries().OrderByDescending(e => e.EntryDate).ToList();

        // Adjust current page if needed after deletion
        if (!PaginatedEntries.Any() && CurrentPage > 1)
        {
            CurrentPage--;
        }
    }

    async Task DownloadSingleEntry(int id)
    {
        var entry = DB.GetEntry(id);
        if (entry == null) return;

        var pdfBytes = PdfService.GenerateSingleEntryPdf(entry);
        var fileName = $"{entry.Title.Replace(" ", "_")}_{entry.EntryDate:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }

    async Task DownloadAllEntries()
    {
        var pdfBytes = PdfService.GenerateAllEntriesPdf(Entries);
        var fileName = $"All_Journal_Entries_{DateTime.Now:yyyy-MM-dd}.pdf";

        await JS.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(pdfBytes));
    }

    // Pagination methods
    void FirstPage()
    {
        CurrentPage = 1;
    }

    void LastPage()
    {
        CurrentPage = TotalPages;
    }

    void NextPage()
    {
        if (CurrentPage < TotalPages)
            CurrentPage++;
    }

    void PreviousPage()
    {
        if (CurrentPage > 1)
            CurrentPage--;
    }

    void GoToPage(int pageNumber)
    {
        CurrentPage = pageNumber;
    }

    void ChangePageSize(ChangeEventArgs e)
    {
        PageSize = int.Parse(e.Value?.ToString() ?? "10");
        CurrentPage = 1; // Reset to first page when changing page size
    }
}