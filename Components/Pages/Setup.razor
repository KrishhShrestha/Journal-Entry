@page "/setup"
@using Journal_Entry.Components.Layout
@layout AuthLayout
@using Journal_Entry.Services
@inject SecurityService Security
@inject NavigationManager Nav

<div class="setup-container">
    <div class="setup-card">
        <!-- Header Section -->
        <div class="setup-header">
            <div class="setup-icon">
                <span style="font-size: 48px;">🔐</span>
            </div>
            <h2 class="setup-title">Secure Your Journal</h2>
            <p class="setup-subtitle">Set up your security credentials</p>
        </div>

        <!-- Progress Indicator -->
        <div class="progress-indicator">
            <div class="progress-step @(currentStep >= 1 ? "active" : "") @(currentStep > 1 ? "completed" : "")">
                <div class="step-circle">1</div>
                <span class="step-label">Username</span>
            </div>
            <div class="progress-line @(currentStep > 1 ? "completed" : "")"></div>
            <div class="progress-step @(currentStep >= 2 ? "active" : "") @(currentStep > 2 ? "completed" : "")">
                <div class="step-circle">2</div>
                <span class="step-label">PIN</span>
            </div>
            <div class="progress-line @(currentStep > 2 ? "completed" : "")"></div>
            <div class="progress-step @(currentStep >= 3 ? "active" : "")">
                <div class="step-circle">3</div>
                <span class="step-label">Confirm</span>
            </div>
        </div>

        <!-- Step 1: Username -->
        @if (currentStep == 1)
        {
            <div class="step-content">
                <h3 class="step-title">Choose Your Username</h3>
                <p class="step-description">This will be displayed in your journal</p>

                <div class="input-group">
                    <input type="text"
                           class="setup-input"
                           placeholder="Enter username"
                           @bind="username"
                           @bind:event="oninput"
                           maxlength="20" />
                    @if (!string.IsNullOrEmpty(usernameError))
                    {
                        <div class="input-error">@usernameError</div>
                    }
                </div>

                <button class="setup-btn" @onclick="NextToPin" disabled="@(string.IsNullOrWhiteSpace(username))">
                    Continue
                </button>
            </div>
        }

        <!-- Step 2: Set PIN -->
        @if (currentStep == 2)
        {
            <div class="step-content">
                <h3 class="step-title">Create Your 4-Digit PIN</h3>
                <p class="step-description">This PIN will protect your journal</p>

                <div class="pin-display">
                    <div class="pin-dots">
                        <div class="pin-dot @(pin.Length >= 1 ? "filled" : "")"></div>
                        <div class="pin-dot @(pin.Length >= 2 ? "filled" : "")"></div>
                        <div class="pin-dot @(pin.Length >= 3 ? "filled" : "")"></div>
                        <div class="pin-dot @(pin.Length >= 4 ? "filled" : "")"></div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(pinError))
                {
                    <div class="error-message">
                        <span>⚠️</span> @pinError
                    </div>
                }

                <!-- Number Pad -->
                <div class="number-pad">
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddPinDigit('1')">1</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('2')">2</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('3')">3</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddPinDigit('4')">4</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('5')">5</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('6')">6</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddPinDigit('7')">7</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('8')">8</button>
                        <button class="number-btn" @onclick="() => AddPinDigit('9')">9</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn back-btn" @onclick="BackToUsername">
                            <span style="font-size: 16px;">← Back</span>
                        </button>
                        <button class="number-btn" @onclick="() => AddPinDigit('0')">0</button>
                        <button class="number-btn delete-btn" @onclick="DeletePinDigit">
                            <span style="font-size: 20px;">⌫</span>
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Step 3: Confirm PIN -->
        @if (currentStep == 3)
        {
            <div class="step-content">
                <h3 class="step-title">Confirm Your PIN</h3>
                <p class="step-description">Enter your PIN again to confirm</p>

                <div class="pin-display">
                    <div class="pin-dots">
                        <div class="pin-dot @(confirmPin.Length >= 1 ? "filled" : "")"></div>
                        <div class="pin-dot @(confirmPin.Length >= 2 ? "filled" : "")"></div>
                        <div class="pin-dot @(confirmPin.Length >= 3 ? "filled" : "")"></div>
                        <div class="pin-dot @(confirmPin.Length >= 4 ? "filled" : "")"></div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(confirmError))
                {
                    <div class="error-message">
                        <span>⚠️</span> @confirmError
                    </div>
                }

                <!-- Number Pad -->
                <div class="number-pad">
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddConfirmDigit('1')">1</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('2')">2</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('3')">3</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddConfirmDigit('4')">4</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('5')">5</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('6')">6</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn" @onclick="() => AddConfirmDigit('7')">7</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('8')">8</button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('9')">9</button>
                    </div>
                    <div class="number-row">
                        <button class="number-btn back-btn" @onclick="BackToPin">
                            <span style="font-size: 16px;">← Back</span>
                        </button>
                        <button class="number-btn" @onclick="() => AddConfirmDigit('0')">0</button>
                        <button class="number-btn delete-btn" @onclick="DeleteConfirmDigit">
                            <span style="font-size: 20px;">⌫</span>
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Success Message -->
        @if (showSuccess)
        {
            <div class="success-overlay">
                <div class="success-content">
                    <div class="success-icon">✓</div>
                    <h3>Setup Complete!</h3>
                    <p>Redirecting to your journal...</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
