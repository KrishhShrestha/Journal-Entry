        .setup-card {
            padding: 30px 20px;
        }

        .number-btn {
            height: 55px;
            font-size: 20px;
        }

        .step-title {
            font-size: 20px;
        }
    }
</style>

@code {
    private int currentStep = 1;
    private string username = "";
    private string pin = "";
    private string confirmPin = "";
    private string usernameError = "";
    private string pinError = "";
    private string confirmError = "";
    private bool showSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        // Check if already has PIN (coming from "Forgot PIN" link)
        var existingPin = await Security.GetPinAsync();
        if (!string.IsNullOrEmpty(existingPin))
        {
            // Clear existing security settings for reset
            await Security.SetPinAsync("");
            Security.SetUsername("");
        }
    }

    private void NextToPin()
    {
        if (string.IsNullOrWhiteSpace(username))
        {
            usernameError = "Username is required";
            return;
        }

        if (username.Length < 3)
        {
            usernameError = "Username must be at least 3 characters";
            return;
        }

        usernameError = "";
        currentStep = 2;
    }

    private void BackToUsername()
    {
        currentStep = 1;
        pin = "";
        pinError = "";
    }

    private void BackToPin()
    {
        currentStep = 2;
        confirmPin = "";
        confirmError = "";
    }

    private void AddPinDigit(char digit)
    {
        if (pin.Length < 4)
        {
            pin += digit;
            pinError = "";

            if (pin.Length == 4)
            {
                // Auto-advance to confirm step
                _ = InvokeAsync(() =>
                {
                    currentStep = 3;
                    StateHasChanged();
                });
            }
        }
    }

    private void DeletePinDigit()
    {
        if (pin.Length > 0)
        {
            pin = pin.Substring(0, pin.Length - 1);
            pinError = "";
        }
    }

    private void AddConfirmDigit(char digit)
    {
        if (confirmPin.Length < 4)
        {
            confirmPin += digit;
            confirmError = "";

            if (confirmPin.Length == 4)
            {
                // Auto-submit when 4 digits entered
                _ = InvokeAsync(async () => await CompleteSetup());
            }
        }
    }

    private void DeleteConfirmDigit()
    {
        if (confirmPin.Length > 0)
        {
            confirmPin = confirmPin.Substring(0, confirmPin.Length - 1);
            confirmError = "";
        }
    }

    private async Task CompleteSetup()
    {
        if (pin != confirmPin)
        {
            confirmError = "PINs do not match";
            confirmPin = "";
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            // Save username and PIN
            Security.SetUsername(username);
            await Security.SetPinAsync(pin);

            // Set as authenticated
            await Security.SetAuthenticatedAsync(true);

            // Show success message
            showSuccess = true;
            await InvokeAsync(StateHasChanged);

            // Wait 2 seconds then navigate
            await Task.Delay(2000);
            Nav.NavigateTo("/journal", forceLoad: true);
        }
        catch (Exception ex)
        {
            confirmError = "Error saving credentials";
            confirmPin = "";
            await InvokeAsync(StateHasChanged);
        }
    }
}