@page "/lock"
@using Journal_Entry.Components.Layout
@layout AuthLayout
@using Journal_Entry.Services
@inject SecurityService Security
@inject NavigationManager Nav

<div class="lock-container">
    <div class="lock-card">
        <!-- Logo/Icon Section -->
        <div class="lock-header">
            <div class="lock-icon">
                <span style="font-size: 48px;">🔒</span>
            </div>
            <h2 class="lock-title">Welcome Back</h2>
            <p class="lock-subtitle">Enter your 4-digit PIN to unlock your journal</p>
        </div>

        <!-- PIN Input -->
        <div class="pin-container">
            <div class="pin-dots">
                <div class="pin-dot @(enteredPin.Length >= 1 ? "filled" : "")"></div>
                <div class="pin-dot @(enteredPin.Length >= 2 ? "filled" : "")"></div>
                <div class="pin-dot @(enteredPin.Length >= 3 ? "filled" : "")"></div>
                <div class="pin-dot @(enteredPin.Length >= 4 ? "filled" : "")"></div>
            </div>

            @if (!string.IsNullOrEmpty(error))
            {
                <div class="error-message">
                    <span>⚠️</span> @error
                </div>
            }
        </div>

        <!-- Number Pad -->
        <div class="number-pad">
            <div class="number-row">
                <button class="number-btn" @onclick="() => AddDigit('1')">1</button>
                <button class="number-btn" @onclick="() => AddDigit('2')">2</button>
                <button class="number-btn" @onclick="() => AddDigit('3')">3</button>
            </div>
            <div class="number-row">
                <button class="number-btn" @onclick="() => AddDigit('4')">4</button>
                <button class="number-btn" @onclick="() => AddDigit('5')">5</button>
                <button class="number-btn" @onclick="() => AddDigit('6')">6</button>
            </div>
            <div class="number-row">
                <button class="number-btn" @onclick="() => AddDigit('7')">7</button>
                <button class="number-btn" @onclick="() => AddDigit('8')">8</button>
                <button class="number-btn" @onclick="() => AddDigit('9')">9</button>
            </div>
            <div class="number-row">
                <button class="number-btn empty"></button>
                <button class="number-btn" @onclick="() => AddDigit('0')">0</button>
                <button class="number-btn delete-btn" @onclick="DeleteDigit">
                    <span style="font-size: 20px;">⌫</span>
                </button>
            </div>
        </div>

        <!-- Forgot PIN Link -->
        <div class="lock-footer">
            <a href="/setup" class="forgot-link">Forgot PIN? Reset Security</a>
        </div>
    </div>
</div>

<style>
    .lock-container {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .lock-card {
        background: white;
        border-radius: 24px;
        padding: 40px 30px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 420px;
        width: 100%;
        animation: slideUp 0.4s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .lock-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .lock-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .lock-title {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 8px;
    }

    .lock-subtitle {
        font-size: 15px;
        color: #6b7280;
        margin: 0;
    }

    .pin-container {
        margin-bottom: 40px;
    }

    .pin-dots {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-bottom: 20px;
    }

    .pin-dot {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 2px solid #d1d5db;
        transition: all 0.3s ease;
    }

        .pin-dot.filled {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
            transform: scale(1.1);
        }

    .error-message {
        text-align: center;
        color: #ef4444;
        font-size: 14px;
        font-weight: 500;
        padding: 10px;
        background: #fee2e2;
        border-radius: 8px;
        animation: shake 0.4s ease;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        75% {
            transform: translateX(10px);
        }
    }

    .number-pad {
        margin-bottom: 24px;
    }

    .number-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
        margin-bottom: 12px;
    }

    .number-btn {
        width: 100%;
        height: 65px;
        border: 2px solid #e5e7eb;
        background: white;
        border-radius: 12px;
        font-size: 24px;
        font-weight: 600;
        color: #1f2937;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .number-btn:hover:not(.empty) {
            background: #f3f4f6;
            border-color: #667eea;
            transform: scale(1.05);
        }

        .number-btn:active:not(.empty) {
            transform: scale(0.95);
            background: #e5e7eb;
        }

        .number-btn.empty {
            border: none;
            cursor: default;
        }

        .number-btn.delete-btn {
            background: #fee2e2;
            border-color: #fecaca;
            color: #ef4444;
        }

            .number-btn.delete-btn:hover {
                background: #fecaca;
                border-color: #ef4444;
            }

    .lock-footer {
        text-align: center;
        margin-top: 20px;
    }

    .forgot-link {
        color: #667eea;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.2s ease;
    }

        .forgot-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

    @@media (max-width: 480px) {
        .lock-card {
            padding: 30px 20px;
        }

        .number-btn {
            height: 55px;
            font-size: 20px;
        }

        .lock-title {
            font-size: 24px;
        }
    }
</style>

@code {
    private string enteredPin = "";
    private string error = "";

    private void AddDigit(char digit)
    {
        if (enteredPin.Length < 4)
        {
            enteredPin += digit;
            error = "";

            if (enteredPin.Length == 4)
            {
                _ = InvokeAsync(async () => await Unlock());
            }
        }
    }

    private void DeleteDigit()
    {
        if (enteredPin.Length > 0)
        {
            enteredPin = enteredPin.Substring(0, enteredPin.Length - 1);
            error = "";
        }
    }

    private async Task Unlock()
    {
        try
        {
            var savedPin = await Security.GetPinAsync();

            if (enteredPin == savedPin)
            {
                // Set authentication flag
                await Security.SetAuthenticatedAsync(true);

                // Navigate to journal
                Nav.NavigateTo("/", forceLoad: true);
            }
            else
            {
                error = "Incorrect PIN";
                enteredPin = "";
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            error = "Error verifying PIN";
            enteredPin = "";
            await InvokeAsync(StateHasChanged);
        }
    }
}